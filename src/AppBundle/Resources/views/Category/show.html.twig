{% extends 'AppBundle:partials:layout.html.twig' %}

{% block body %}
    <h1>CategoryAbstract</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ categoryAbstract.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ categoryAbstract.title }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{{ categoryAbstract.category }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('cms_categories_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('cms_categories_edit', { 'id': categoryAbstract.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
